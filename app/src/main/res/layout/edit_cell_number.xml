<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorDialogBackground"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleNumberEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundToolbarDialog"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/input_of_data"
        android:textColor="@color/colorOnPrimary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editCellText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/set_text"
        android:importantForAutofill="no"
        android:inputType="numberDecimal|number|numberSigned"
        android:maxHeight="200dp"
        android:minHeight="48dp"
        android:textColor="@color/textColorPrimary"
        android:textColorHint="@color/textColorSecondary"
        tools:ignore="TextContrastCheck" />

    <include layout="@layout/formula_symbols" />


</LinearLayout>